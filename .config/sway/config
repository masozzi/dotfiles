client.focused				#020C0D #020C0D #020C0D #020C0D #020C0D
client.focused_inactive		#020C0D #020C0D #020C0D #020C0D #020C0D
client.placeholder			#020C0D #020C0D #020C0D #020C0D #020C0D
client.unfocused			#020C0D #020C0D #020C0D #020C0D #020C0D
client.urgent				#020C0D #020C0D #020C0D #020C0D #020C0D

